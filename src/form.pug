                    .form__caption 
                        label(class="form__title") masked text field
                    input(class="text__field" placeholder="ДД.ММ.ГГГГ")
                .form__second 
                    .form__date
                        .form__caption
                            label(class="form__title") date Dropdown
                        .dropdown__input 
                            p(class="dropdown__caption") ДД.ММ.ГГГГ
                            button.dropdown__down ˅
                    .form__date
                        .form__caption
                            label(class="form__title") date Dropdown
                        .dropdown__input 
                            p(class="dropdown__caption") 19.08.2019
                            button.dropdown__down ˅
                    .form__filter
                        .form__caption
                            label(class="form__title") filter date dropdown
                        .dropdown__input 
